<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/dialog_choice_bg"
    >
    <!-- 顶部 -->
    <LinearLayout 
        android:id="@+id/layout_top"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        >
        <CheckBox 
            android:id="@+id/cbx_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/image_checkbox"
            />
        <TextView 
            android:id="@+id/layout_topText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:textColor="@color/black"
            android:text="数据采集"
            />
    </LinearLayout>
    <!--  
    <ImageView
         android:id="@+id/line"
         android:layout_below="@+id/layout_top"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/tag_line_n"
         android:contentDescription="@string/app_name" />
         -->
    <!-- 中间 -->
    <ListView
        android:id="@+id/list_gid" 
        android:layout_below="@+id/layout_top"
        android:layout_above="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:cacheColorHint="#ffffffff"
        android:divider="@null"
        >
    </ListView>
    <!-- 底部-->
     <LinearLayout 
        android:id="@+id/layout_bottom"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        >
        <Button
            android:id="@+id/btn_ok"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sureValue"
            android:background="@drawable/dialog_choice_btn"
            />
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/datecancel"
            android:textColor="@color/white"
            android:background="@drawable/dialog_choice_btn"
            />
     </LinearLayout>
</RelativeLayout>